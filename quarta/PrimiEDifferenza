<body>


    <div id="result" class="box"></div>
    <div id="evenOdd" class="box1"></div>
    <div id="difference" class="box2"></div>
    <button class="button" onclick="updateNumber()">Rigenera Numero</button>
    <script>
        let firstRandomNumber;

        function generateRandomNumber() {
            return Math.floor(Math.random() * 100) + 1;
        }

        function checkEvenOdd(num) {
            return num % 2 === 0 ? 'pari' : 'dispari';
        }

        function isPrime(num) {
            if (num <= 1) return false;
            for (let i = 2; i <= Math.sqrt(num); i++) {
                if (num % i === 0) return false;
            }
            return true;
        }

        function updateNumber() {
            const secondRandomNumber = generateRandomNumber();

            if (firstRandomNumber === undefined) {
                firstRandomNumber = generateRandomNumber();
            }

            const resultTextFirst = `Primo numero= ${firstRandomNumber}`;
            const evenOddTextFirst = `Primo numero= ${checkEvenOdd(firstRandomNumber)} - ${isPrime(firstRandomNumber) ? 'è primo' : 'non è primo'}`;

            const resultTextSecond = `Secondo numero= ${secondRandomNumber}`;
            const evenOddTextSecond = `Secondo numero= ${checkEvenOdd(secondRandomNumber)} - ${isPrime(secondRandomNumber) ? 'è primo' : 'non è primo'}`;

            const difference = Math.abs(firstRandomNumber - secondRandomNumber);
            const differenceText = `La differenza è= ${difference}`;

            document.getElementById('result').innerText = resultTextFirst + '\n' + resultTextSecond;
            document.getElementById('evenOdd').innerText = evenOddTextFirst + '\n' + evenOddTextSecond;
            document.getElementById('difference').innerText = differenceText;

            firstRandomNumber = secondRandomNumber;
        }
        
        updateNumber();
    </script>
</body>
</html>
